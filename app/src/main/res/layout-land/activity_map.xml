<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.matt2393.taximap.mapa.MapActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="15dp">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarMap"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <fragment

            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.matt2393.taximap.mapa.MapActivity" />
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/estado_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="24dp"
        android:layout_gravity="top|end"
        app:backgroundTint="#ffffff"
        app:elevation="15dp"
        android:src="@drawable/ic_traffic_white_48dp_libre"/>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ubicacion_actual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="end"
        app:backgroundTint="#ffffff"
        app:elevation="15dp"
        android:src="@drawable/ic_my_location_black_48dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/autolibre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="24dp"
        app:backgroundTint="@color/colorLibre"
        app:elevation="15dp"
        android:src="@drawable/ic_local_taxi_white_48dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/autoocupado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/colorOcupado"
        app:elevation="15dp"
        android:src="@drawable/ic_local_taxi_white_48dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/autoalerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/colorAlerta"
        app:elevation="15dp"
        android:src="@drawable/ic_report_white_48dp"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/conectados_alerta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="16dp"
        app:backgroundTint="@color/colorAlerta"
        app:elevation="15dp"
        android:src="@drawable/ic_report_white_48dp"
        android:visibility="gone"/>

</android.support.design.widget.CoordinatorLayout>
